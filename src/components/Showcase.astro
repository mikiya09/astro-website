
---
// because we have media setup already, so when window width decrease to certain px 
// it will follow what that media specify, in our case only .logos-small {} class is displayed
import logos from '../images/framework-logos.png'
import logosSmall from '../images/framework-logos-small.png'

// same in the Layout template, we want some heading to be able to display dynamically
// question mark means optional display 
export interface Props {
    heading?: string;
    text?: string;
    showExtra?: boolean;    // for blog pages only want heading and p, so label img as extra and only display in index page
                            // false by default, set it to true to showcase or any otherb page you want to show those img
                            // you set it up in the index.astro page
}

// here we are setting heading and text for default
const { heading = "Welcome To The Website!", 
        text = "Super fast HTML website used for myself",
        showExtra = false } = Astro.props as Props;
---


<section class="showcase">
    <div class="showcase-text">
        <h1>{heading}</h1>
        <p>{text}</p>
    </div>

    {showExtra && <>
        <div class="showcase-img">
            <img class="logos" src={logos} alt="" />
            <img class="logos-small" src={logosSmall} alt="" />
        </div>
        <p class="showcase-demo">
            <small>This is a test website used for myself</small>
        </p>
    </>}
    
    </section>


<style>
/* Showcase */
.showcase {
    height: auto;
    background-color: var(--color-secondary);
    background-imgae: linear-gradient(to bottom, var(--color-primary), rgb(15 23 41 / 0));
    padding: 30px;
}

.showcase-blog {
    min-height: 300px;
}

.showcase-text {
    max-width: 500px;
    color: #fff;
    text-align: center;
    margin: 50px auto;
}

.showcase h1 {
    font-size: 50px;
    color: #fff;
    margin-bottom: 20px;
}

.showcase p {
    font-size: 24px;
    margin-bottom: 20px;
}

.showcase-img {
    text-align: center;
}

.showcase-img img {
    border-radius: 10px;
    margin: auto;
}

.showcase-demo {
    color: #fff;
    text-align: center;
    font-weight: 300;
}

</style>
