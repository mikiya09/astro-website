---
// import logo images in a variable logo, and in the <img> tags, we use src={logo}
// this is called dynamic rendering, because we are rendering in runtime, I guess
import logo from '../images/logo.svg';
---

<header class="header">
    <div class="container">
       <div class="logo">
           <a href="/">
              <img src={logo} alt="" /> 
           </a>
       </div>
       <nav>
           <ul>
               <li><a href="/">Home</a></li>
               <li><a href="/about">About</a></li>
               <li><a href="/blog">Blog</a></li>
           </ul>
       </nav>
    </div>
</header>

<style>
/* Header */

.header {
    height: 70px;
    background: var(--color-primary);
}

.header .container {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between; 
    padding: 0 20px;
}

.header img {
    height: 35px;
    vertical-align: middle;
}

.header nav ul {
    display: flex;
}

.header nav ul li {
    padding: 0 10px;
}

.header nav ul li a {
    color: #fff;
}

</style>
